{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": [
      "ES2020",
      "DOM",
      "DOM.Iterable"
    ],
    "module": "ESNext",
    "skipLibCheck": true,
    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",
    /* Linting */
    "strict": false,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noEmitOnError": false,
    "baseUrl": ".",
    "paths": {
      "@/hooks/*": [
        "./src/hooks/*"
      ],
      "@/assets/*": [
        "./src/assets/*"
      ],
      "@clients/*": ["./src/clients/*"],
      "@hooks/*": ["./src/hooks/*"],
      "@components/*": [
        "./src/components/*"
      ],
      "@/*": [
        "./*"
      ]
    },
  },
  "include": [
    "src",
    "**/*.ts",
    "**/*.tsx"
  ],
  "exclude": ["functions", "supabase"]
}